{
  "name": "@comandeer/eslint-config",
  "version": "0.8.0",
  "description": "Shareable ESLint configuration",
  "main": "index.js",
  "scripts": {
    "test": "mlt lint test",
    "preversion": "npm test",
    "postversion": "git push origin && git push origin --tags",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/eslint-config/issues"
  },
  "homepage": "https://github.com/Comandeer/eslint-config#readme",
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@comandeer/mocha-lib-tester": "^0.6.0",
    "commitplease": "^3.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.1"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint-plugin-mocha": "^10.1.0"
  }
}
