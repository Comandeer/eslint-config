{
  "name": "@comandeer/eslint-config",
  "version": "0.1.0",
  "description": "Shareable ESLint configuration",
  "main": "index.js",
  "scripts": {
    "lint": "eslint -c index.js index.js tests/*.js",
    "pretest": "npm run lint",
    "test": "mocha tests/*.js --timeout 15000",
    "commitmsg": "is-ci && exit 0 || commitplease .git/COMMIT_EDITMSG",
    "preversion": "npm test",
    "postversion": "git push origin && git push origin --tags"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/eslint-config/issues"
  },
  "homepage": "https://github.com/Comandeer/eslint-config#readme",
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "eslint": ">=4.0.0"
  },
  "devDependencies": {
    "@comandeer/is-ci": "^1.0.0",
    "chai": "^4.1.2",
    "commitplease": "^3.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.0",
    "husky": "^2.3.0",
    "mocha": "^6.0.0"
  }
}
